<h2>Poziom 3 – Metody tablic</h2>

<p id="z1"></p>
<p id="z2"></p>
<p id="z3"></p>

<script>

    // ===== ZADANIE 1 =====
    let liczby = [1, 2, 3, 4, 5];

    let kwadraty = liczby.map(function(liczba) {
        return liczba * liczba;
    });

    document.getElementById("z1").innerText =
        "Zadanie 1: Kwadraty = " + kwadraty;


    // ===== ZADANIE 2 =====
    let imiona = ["Anna", "Jan", "Krzysztof", "Ola"];

    let dluzsze = imiona.filter(function(imie) {
        return imie.length > 3;
    });

    document.getElementById("z2").innerText =
        "Zadanie 2: Imiona dłuższe niż 3 znaki = " + dluzsze;


    // ===== ZADANIE 3 =====
    let liczby2 = [5, 10, 15];

    let jedenString = liczby2.join(" - ");

    document.getElementById("z3").innerText =
        "Zadanie 3: String = " + jedenString;

</script>

</body>
