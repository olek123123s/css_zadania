<head>
    <meta charset="UTF-8">
    <title>Poziom 2 – Pętle + Logika</title>
</head>
<body>

<h2>Poziom 2 – Pętle + Logika</h2>

<p id="z1"></p>
<p id="z2"></p>
<p id="z3"></p>
<p id="z4"></p>

<script>

    // ===== ZADANIE 1 =====
    let oceny = [2, 3, 5, 4, 1, 5];

    let suma = 0;
    let pozytywne = "";

    for (let i = 0; i < oceny.length; i++) {
        suma += oceny[i];

        if (oceny[i] > 1) {   // pozytywne (2,3,4,5)
            pozytywne += oceny[i] + " ";
        }
    }

    let srednia = suma / oceny.length;

    document.getElementById("z1").innerText =
        "Zadanie 1: Średnia = " + srednia.toFixed(2) +
        ", Oceny pozytywne = " + pozytywne;


    // ===== ZADANIE 2 =====
    function tylkoParzyste(tablica) {
        let nowa = [];

        for (let i = 0; i < tablica.length; i++) {
            if (tablica[i] % 2 === 0) {
                nowa.push(tablica[i]);
            }
        }

        return nowa;
    }

    let liczby = [1, 2, 3, 4, 5, 6];

    document.getElementById("z2").innerText =
        "Zadanie 2: Liczby parzyste = " + tylkoParzyste(liczby);


    // ===== ZADANIE 3 =====
    let jezyki = ["HTML", "CSS", "JS"];
    let odwrocona = [];

    for (let i = jezyki.length - 1; i >= 0; i--) {
        odwrocona.push(jezyki[i]);
    }

    document.getElementById("z3").innerText =
        "Zadanie 3: Odwrocona tablica = " + odwrocona;


    // ===== ZADANIE 4 =====
    function czyZawiera(tablica, element) {
        for (let i = 0; i < tablica.length; i++) {
            if (tablica[i] === element) {
                return true;
            }
        }
        return false;
    }

    let wynik = czyZawiera(jezyki, "CSS");

    document.getElementById("z4").innerText =
        "Zadanie 4: Czy zawiera 'CSS'? = " + wynik;

</script>

</body>
</html>
