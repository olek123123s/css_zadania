<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Poziom 4</title>
</head>
<body>

<h2>Wyniki:</h2>

<script>

// 1. Uczniowie
const uczniowie = [
  { imie: "Ola", punkty: 78 },
  { imie: "Jan", punkty: 45 },
  { imie: "Ania", punkty: 92 }
];

let suma = 0;

document.write("<b>Uczniowie którzy zdali:</b><br>");

for (let i = 0; i < uczniowie.length; i++) {
  suma = suma + uczniowie[i].punkty;

  if (uczniowie[i].punkty >= 50) {
    document.write(uczniowie[i].imie + "<br>");
  }
}

let srednia = suma / uczniowie.length;
document.write("<br>Średnia: " + srednia + "<br><br>");


// 2. Usuwanie duplikatów
function usunDuplikaty(tablica) {
  let nowa = [];

  for (let i = 0; i < tablica.length; i++) {
    if (!nowa.includes(tablica[i])) {
      nowa.push(tablica[i]);
    }
  }

  return nowa;
}

let liczby = [1, 2, 2, 3, 4, 4, 5];
document.write("<b>Bez duplikatów:</b> " + usunDuplikaty(liczby) + "<br><br>");


// 3. Liczenie produktów
let zakupy = ["chleb", "mleko", "ser", "chleb", "masło"];
let wynik = {};

for (let i = 0; i < zakupy.length; i++) {

  let produkt = zakupy[i];

  if (wynik[produkt]) {
    wynik[produkt] = wynik[produkt] + 1;
  } else {
    wynik[produkt] = 1;
  }
}

document.write("<b>Ilość produktów:</b><br>");

for (let produkt in wynik) {
  document.write(produkt + ": " + wynik[produkt] + "<br>");
}

</script>

</body>
</html>
