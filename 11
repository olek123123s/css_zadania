<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>Tablice - Poziom 1</title>
</head>
<body>

<h2>Poziom 1 – Podstawy tablic</h2>

<p id="z1"></p>
<p id="z2"></p>
<p id="z3"></p>
<p id="z4"></p>

<script>

    // ===== ZADANIE 1 =====
    let imiona = ["Ola", "Adam", "Kasia", "Bartek", "Zosia"];

    document.getElementById("z1").innerText =
        "Zadanie 1: Długość = " + imiona.length +
        ", Pierwsze = " + imiona[0] +
        ", Ostatnie = " + imiona[imiona.length - 1];


    // ===== ZADANIE 2 =====
    function sumaTablicy(tablica) {
        let suma = 0;
        for (let i = 0; i < tablica.length; i++) {
            suma += tablica[i];
        }
        return suma;
    }

    let liczby1 = [5, 10, 15, 20];

    document.getElementById("z2").innerText =
        "Zadanie 2: Suma = " + sumaTablicy(liczby1);


    // ===== ZADANIE 3 =====
    let liczby2 = [3, 7, 1, 9, 4];
    let max = liczby2[0];

    for (let i = 1; i < liczby2.length; i++) {
        if (liczby2[i] > max) {
            max = liczby2[i];
        }
    }

    document.getElementById("z3").innerText =
        "Zadanie 3: Największa liczba = " + max;


    // ===== ZADANIE 4 =====
    let liczby3 = [2, 4, 6, 8, 10];

    liczby3.unshift(0);
    liczby3.push(12);

    document.getElementById("z4").innerText =
        "Zadanie 4: Tablica = " + liczby3;

</script>

</body>
</html>
